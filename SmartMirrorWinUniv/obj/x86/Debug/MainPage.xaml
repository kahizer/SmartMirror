<Page
    x:Class="SmartMirrorWinUniv.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartMirrorWinUniv"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="1800" Width="1050">
    <!--<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">-->
        <Grid Background="Black">
        <Grid.Resources>
            <Style TargetType="TextBlock" x:Key="TextBlockStyle">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontSize" Value="30" />
            </Style>
            <Style TargetType="TextBlock" x:Key="NewsTextBlockStyle">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="Margin" Value="0,15,0,0"/>
                
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">
            <TextBlock x:ConnectionId='45'  Name="DayInfoTextBlock" Style="{StaticResource TextBlockStyle}" FontSize="28"/>
            <TextBlock x:ConnectionId='46'  Name="CurrentTimeTextBlock" Style="{StaticResource TextBlockStyle}" FontSize="60"/>
            <TextBlock Margin="0,50,0,0" Style="{StaticResource TextBlockStyle}" Text="Traffic Information" FontWeight="Bold"/>
            <TextBlock x:ConnectionId='47' Name="TrafficInformationTextBlock" Style="{StaticResource TextBlockStyle}" FontWeight="Bold"/>
            <TextBlock x:ConnectionId='48' Name="ArrivalTimeTextBlock" Style="{StaticResource TextBlockStyle}"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
            <TextBlock  Style="{StaticResource TextBlockStyle}" Margin="20,10,0,0" FontSize="25" Text="Hello J"/>
        </StackPanel>
            
        <Grid Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" HorizontalAlignment="Right">
                <StackPanel  Orientation="Vertical">
                
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="&#xf050;" Style="{StaticResource TextBlockStyle}" FontFamily="weathericons-regular-webfont.ttf#Weather Icons" />
                        <TextBlock x:ConnectionId='43' Margin="10,0,0,0" Name="WindSpeedTextBlock" Style="{StaticResource TextBlockStyle}" />
                        <TextBlock Margin="25,0,0,0" Text="&#xf052;" Style="{StaticResource TextBlockStyle}" FontFamily="weathericons-regular-webfont.ttf#Weather Icons" />
                        <TextBlock x:ConnectionId='44' Margin="10,0,0,0" Name="SunsetTimeTextBlock" Style="{StaticResource TextBlockStyle}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:ConnectionId='41' Name="MainIconTextBlock" FontSize="70"  Style="{StaticResource TextBlockStyle}" FontFamily="weathericons-regular-webfont.ttf#Weather Icons"/>
                        <TextBlock x:ConnectionId='42' Margin="15,0,0,0" Name="TempTextBlock" Style="{StaticResource TextBlockStyle}" FontSize="70" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <TextBlock x:ConnectionId='3' Name="DetailedSumaryTextBlock" Style="{StaticResource TextBlockStyle}" TextWrapping="Wrap" FontSize="20" HorizontalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" Margin="0,35,0,0">
                        <TextBlock x:ConnectionId='37' Name="DayTextBlock01" Style="{StaticResource TextBlockStyle}" Width="85"/>
                     <TextBlock x:ConnectionId='38' Name="IconTextBlock01" Style="{StaticResource TextBlockStyle}" Width="60" FontFamily="weathericons-regular-webfont.ttf#Weather Icons" />
                    <TextBlock x:ConnectionId='39' Margin="10,0,0,0" Name="HighTempDay01" Style="{StaticResource TextBlockStyle}" Width="60"/>
                        <TextBlock x:ConnectionId='40' Margin="10,0,0,0" Name="LowTempDay01" Style="{StaticResource TextBlockStyle}" Width="60"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='33' Name="DayTextBlock02" Style="{StaticResource TextBlockStyle}" Width="85"/>
                    <TextBlock x:ConnectionId='34' Name="IconTextBlock02" Style="{StaticResource TextBlockStyle}" Width="60" FontFamily="weathericons-regular-webfont.ttf#Weather Icons" />
                    <TextBlock x:ConnectionId='35' Margin="10,0,0,0" Name="HighTempDay02" Style="{StaticResource TextBlockStyle}" Width="60"/>
                        <TextBlock x:ConnectionId='36' Margin="10,0,0,0" Name="LowTempDay02" Style="{StaticResource TextBlockStyle}" Width="60"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='29' Name="DayTextBlock03" Style="{StaticResource TextBlockStyle}" Width="85"/>
                    <TextBlock x:ConnectionId='30' Name="IconTextBlock03" Style="{StaticResource TextBlockStyle}" Width="60" FontFamily="weathericons-regular-webfont.ttf#Weather Icons" />
                    <TextBlock x:ConnectionId='31' Margin="10,0,0,0" Name="HighTempDay03" Style="{StaticResource TextBlockStyle}" Width="60"/>
                        <TextBlock x:ConnectionId='32' Margin="10,0,0,0" Name="LowTempDay03" Style="{StaticResource TextBlockStyle}" Width="60"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='25' Name="DayTextBlock04" Style="{StaticResource TextBlockStyle}" Width="85"/>
                    <TextBlock x:ConnectionId='26' Name="IconTextBlock04" Style="{StaticResource TextBlockStyle}" Width="60" FontFamily="weathericons-regular-webfont.ttf#Weather Icons"  />
                    <TextBlock x:ConnectionId='27' Margin="10,0,0,0" Name="HighTempDay04" Style="{StaticResource TextBlockStyle}" Width="60"/>
                        <TextBlock x:ConnectionId='28' Margin="10,0,0,0" Name="LowTempDay04" Style="{StaticResource TextBlockStyle}" Width="60"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='21' Name="DayTextBlock05" Style="{StaticResource TextBlockStyle}" Width="85"/>
                    <TextBlock x:ConnectionId='22' Name="IconTextBlock05" Style="{StaticResource TextBlockStyle}" Width="60" FontFamily="weathericons-regular-webfont.ttf#Weather Icons" />
                    <TextBlock x:ConnectionId='23' Margin="10,0,0,0" Name="HighTempDay05" Style="{StaticResource TextBlockStyle}" Width="60"/>
                        <TextBlock x:ConnectionId='24' Margin="10,0,0,0" Name="LowTempDay05" Style="{StaticResource TextBlockStyle}" Width="60"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='17' Name="DayTextBlock06" Style="{StaticResource TextBlockStyle}" Width="85"/>
                    <TextBlock x:ConnectionId='18' Name="IconTextBlock06" Style="{StaticResource TextBlockStyle}" Width="60" FontFamily="weathericons-regular-webfont.ttf#Weather Icons"  />
                    <TextBlock x:ConnectionId='19' Margin="10,0,0,0" Name="HighTempDay06" Style="{StaticResource TextBlockStyle}" Width="60"/>
                        <TextBlock x:ConnectionId='20' Margin="10,0,0,0" Name="LowTempDay06" Style="{StaticResource TextBlockStyle}" Width="60"/>
                    </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock x:ConnectionId='13' Name="DayTextBlock07" Style="{StaticResource TextBlockStyle}" Width="85"/>
                    <TextBlock x:ConnectionId='14' Name="IconTextBlock07" Style="{StaticResource TextBlockStyle}" Width="60" FontFamily="weathericons-regular-webfont.ttf#Weather Icons"  />
                    <TextBlock x:ConnectionId='15' Margin="10,0,0,0" Name="HighTempDay07" Style="{StaticResource TextBlockStyle}" Width="60"/>
                    <TextBlock x:ConnectionId='16' Margin="10,0,0,0" Name="LowTempDay07" Style="{StaticResource TextBlockStyle}" Width="60"/>
                </StackPanel>

                <!-- News -->
                <TextBlock Margin="0,175,15,0" Style="{StaticResource NewsTextBlockStyle}" Text="                           Trending News" 
                           TextDecorations="Underline" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                <TextBlock x:ConnectionId='4' Margin="0,8,0,0" Name="NewsTextBlock01" Style="{StaticResource NewsTextBlockStyle}"/>
                <TextBlock x:ConnectionId='5' Name="NewsTextBlock02" Style="{StaticResource NewsTextBlockStyle}"/>
                <TextBlock x:ConnectionId='6' Name="NewsTextBlock03" Style="{StaticResource NewsTextBlockStyle}"/>
                <TextBlock x:ConnectionId='7' Name="NewsTextBlock04" Style="{StaticResource NewsTextBlockStyle}"/>
                <TextBlock x:ConnectionId='8' Name="NewsTextBlock05" Style="{StaticResource NewsTextBlockStyle}"/>
                <TextBlock x:ConnectionId='9' Name="NewsTextBlock06" Style="{StaticResource NewsTextBlockStyle}"/>
                <TextBlock x:ConnectionId='10' Name="NewsTextBlock07" Style="{StaticResource NewsTextBlockStyle}"/>
                <TextBlock x:ConnectionId='11' Name="NewsTextBlock08" Style="{StaticResource NewsTextBlockStyle}"/>
                <TextBlock x:ConnectionId='12' Name="NewsTextBlock09" Style="{StaticResource NewsTextBlockStyle}"/>

            </StackPanel>
            </Grid>
            

        <StackPanel  Grid.Column="1" Grid.Row="2" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <TextBlock x:ConnectionId='1'  Name="QuoteTextBlock" Style="{StaticResource TextBlockStyle}" Text="{Binding Quote}" TextWrapping="Wrap" HorizontalAlignment="Center" FontStyle="Italic"/>
            <TextBlock x:ConnectionId='2'  Name="AuthorTextBlock" Style="{StaticResource TextBlockStyle}" Text="{Binding Author}" HorizontalAlignment="Center" FontStyle="Italic"/>
        </StackPanel>
        

    </Grid>
</Page>

